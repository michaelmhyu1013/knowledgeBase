<div id="sendUserMessage">
    <div id="div_left">
        <div id="img_send_message">
            <!-- user.image -->
            <img src="{{user.imageurl}}" alt="user" />
        </div>
    </div>
    <div id="div_left">
        <form action="/home/user/{{user.id}}/conversations/create" method="POST">
            <input name="topic" class="input_format" type="text" placeholder="subject" />
            <br />
            <textarea name="message" id="message_detail" cols="30" rows="10" placeholder="message details ...."></textarea>
            <br />
            <button type="submit" class="send_message_button">Message</button>
        </form>
    </div>
</div>